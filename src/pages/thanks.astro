---
import Layout from '../layouts/Layout.astro';

// Placeholder testimonial data
const testimonials = [
  {
    quote: "Al printed the coolest name tag for my backpack! All my friends want one now.",
    name: "Leo, Classmate",
    color: "bg-green-100 border-green-300 text-green-800"
  },
  {
    quote: "I needed a specific part for my robot project, and Al figured out how to print it perfectly. Thanks, Al!",
    name: "Ms. Davis, Teacher",
    color: "bg-blue-100 border-blue-300 text-blue-800"
  },
  {
    quote: "The custom cookie cutter Al made was a hit at our party! So creative.",
    name: "Sarah P., Neighbor",
    color: "bg-yellow-100 border-yellow-300 text-yellow-800"
  },
  {
    quote: "My daughter loves the little fidget toy Al printed for her. Great quality!",
    name: "Mark R., Parent",
    color: "bg-purple-100 border-purple-300 text-purple-800"
  }
];
---

<Layout title="Thank Yous - Happy Customers!">
  <section class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-center text-gray-800 mb-10">Happy Customers! ðŸ˜Š</h1>

    <div class="grid md:grid-cols-2 gap-8">
      {testimonials.map(testimonial => (
        <div class="p-6 rounded-lg shadow-md border-l-4 ${testimonial.color}">
          <p class="text-lg italic mb-4">"{testimonial.quote}"</p>
          <p class="text-right font-semibold">- {testimonial.name}</p>
        </div>
      ))}
    </div>

    <div class="text-center mt-12 bg-indigo-50 p-6 rounded-lg shadow-inner">
      <p class="text-lg text-indigo-800 font-semibold">Want to share your experience?</p>
      <p class="text-indigo-700 mb-4">Let me know through the contact form!</p>
      <a href="/contact" class="bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-6 rounded-full text-md transition duration-300">
        Contact Al
      </a>
    </div>

  </section>
</Layout> 